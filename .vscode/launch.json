{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "ðŸš€ Launch Chrome with Debugger",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
      "runtimeArgs": [
        "--auto-open-devtools-for-tabs",
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor"
      ]
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "ðŸ”— Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ðŸ§ª Debug Tests",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": [
        "--run"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ðŸ“¦ Debug Build Process",
      "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
      "args": [
        "build"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "ðŸ”¥ Launch Dev + Debugger",
      "configurations": [
        "ðŸš€ Launch Chrome with Debugger"
      ],
      "preLaunchTask": "dev",
      "stopAll": true
    }
  ]
}