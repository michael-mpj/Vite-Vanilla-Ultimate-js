{
  "name": "Vite Vanilla Ultimate - Web Development",
  "shortName": "ViteVanilla",
  "description": "Optimized VS Code profile for Vite + Vanilla JavaScript development",
  "icon": "rocket",
  "settings": {
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "material-product-icons",
    "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'Cascadia Code', Consolas, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.lineHeight": 1.6,
    "editor.fontLigatures": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.minimap.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit",
      "source.addMissingImports": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "search.smartCase": true,
    "search.useReplacePreview": true,
    "emmet.includeLanguages": {
      "javascript": "javascriptreact"
    },
    "emmet.triggerExpansionOnTab": true,
    "html.autoClosingTags": true,
    "css.validate": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "editor.parameterHints.enabled": true,
    "debug.onTaskErrors": "showErrors",
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.console.fontSize": 13,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.showPushSuccessNotification": true,
    "scm.diffDecorations": "all",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.enableVisualBell": false,
    "eslint.format.enable": true,
    "eslint.lintTask.enable": true,
    "eslint.codeActionsOnSave.mode": "all",
    "files.exclude": {
      "dist": true,
      "node_modules": true,
      ".cache": true,
      "**/.git": true,
      "**/.DS_Store": true,
      "**/Thumbs.db": true,
      "**/.vitepress/cache": true,
      "coverage": true
    },
    "files.watcherExclude": {
      "**/node_modules/**": true,
      "**/dist/**": true,
      "**/.git/**": true,
      "**/coverage/**": true
    }
  },
  "extensions": {
    "recommendations": [
      "dbaeumer.vscode-eslint",
      "esbenp.prettier-vscode",
      "editorconfig.editorconfig",
      "antfu.vite",
      "bradlc.vscode-tailwindcss",
      "formulahendry.auto-rename-tag",
      "ritwickdey.liveserver",
      "christian-kohler.path-intellisense",
      "zignd.html-css-class-completion",
      "ecmel.vscode-html-css",
      "eg2.vscode-npm-script",
      "christian-kohler.npm-intellisense",
      "ms-vscode.vscode-json",
      "eamodio.gitlens",
      "donjayamanne.githistory",
      "github.vscode-pull-request-github",
      "github.copilot",
      "github.copilot-chat",
      "PKief.material-icon-theme",
      "dracula-theme.theme-dracula",
      "github.github-vscode-theme",
      "yzhang.markdown-all-in-one",
      "davidanson.vscode-markdownlint",
      "shd101wyy.markdown-preview-enhanced",
      "vitest.explorer",
      "ms-playwright.playwright",
      "aaron-bond.better-comments",
      "usernamehw.errorlens",
      "streetsidesoftware.code-spell-checker",
      "gruntfuggly.todo-tree",
      "alefragnani.bookmarks",
      "redhat.vscode-yaml",
      "humao.rest-client",
      "janisdd.vscode-edit-csv"
    ],
    "unwantedRecommendations": ["ms-vscode.vscode-typescript-tslint-plugin", "hookyqr.beautify"]
  }
}
