{
  "name": "vite-vanilla-ultimate-js",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:debug": "vite --debug",
    "build": "vite build",
    "build:debug": "vite build --debug",
    "preview": "vite preview",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:debug": "vitest --reporter=verbose --no-coverage",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky",
    "docs:dev": "vitepress dev docs-site",
    "docs:build": "vitepress build docs-site",
    "docs:preview": "vitepress preview docs-site",
    "fix": "npm run format && npm run lint",
    "fix:verbose": "./scripts/auto-fix.sh",
    "check": "npm run format:check && npm run lint:check && npm run test:run",
    "update-deps": "ncu -u && npm install",
    "update-deps:check": "ncu",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "prerelease": "npm run check && npm run build",
    "postrelease": "git push --follow-tags origin main",
    "ci": "npm run check && npm run build",
    "auto-fix": "npm run update-deps && npm run fix && npm run test:run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "npm-check-updates": "^18.0.2",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "vite": "^7.1.2",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-pwa": "^1.0.2",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.{js,css,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "type": "module"
}
